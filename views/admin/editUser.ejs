    <div class="container">

        <section class="main">
            <div class="mt-5">
                <h4>Change User details</h4>
                <h5><a href="show_user_list">Back</a></h5>
            </div>

            <div class=" form shadow d-flex p-3 mb-5 bg-body-tertiary rounded" style="background: transparent;">
                
                <form action="add_one_user" method="post">
                    <div class="row mt-5 px-5">

                        <div class="form-group  px-5 my-3">
                            <div class="row">
                                <div class="col-lg-2">
                                    <label>User Name</label>
                                </div>
                                <div class="col-lg-10">
                                    <input type="text" class="form-control border-bottom border-secondary"
                                        style=" border-style: none; background:transparent"
                                        placeholder="Enter your Name" name="username" value=" "  required >
                                </div>
                            </div>
                        </div>


                        <div class="form-group  px-5 my-3">
                            <div class="row">
                                <div class="col-lg-2">
                                    <label>Email ID</label>
                                </div>
                                <div class="col-lg-10">
                                    <input type="email" class="form-control border-bottom border-secondary"
                                        style="border-style: none; background:transparent";
                                        placeholder="Enter your Email" name="email" value="" required >
                                </div>
                            </div>
                        </div>


                        <div class="form-group px-5 my-3">
                            <div class="row">
                                <div class="col-lg-2">
                                    <label>Contact Number</label>
                                </div>
                                <div class="col-lg-10">
                                    <input type="tel" class="form-control border-bottom border-secondary"
                                        style=" border-style: none;background:transparent;"
                                        placeholder="Enter your Mobile Number" name="phone" value="" >
                                </div>
                            </div>
                        </div>

                        <!-- <div class="form-group px-5 my-3">
